<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Usuarios Registrados</h6>
  </div>
  <div class="pt-3 pl-3">
    <a href="add" class="btn btn-success .btn-circle btn-sm mr-auto">
      <span class="icon text-white-50">
        <i class="fas fa-check"></i>
      </span>
      <span class="text">Adicionar</span>
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-sm table-hover table-bordered" id="example" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Usuario</th>
            <th>Tipo Usuario</th>
            <th>Compañía</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody>
          {{#each usuarios}}
          <tr>
            <td>{{number_id}}</td>
            <td>{{name}}</td>
            <td>{{lastname}}</td>
            <td>{{username}}</td>
            <td>{{tipo_users}}</td>
            <td>{{sede}}</td>
            <td>{{estado}}</td>
            <td align="center">
              <a class="btn btn-warning btn-sm" href="/users/edit/{{id}}">
                <span class="icon text-white-50"><i class="fas fa-pen"></i></span>
                <span class="text" class="d-inline-block" tabindex="0" data-placement="top" title="Editar"> </span>
              </a>
              <a class="btn btn-danger btn-sm" href="javascript:EliminarUsuarios({{id}})">
                <span class="icon text-white-50 d-inline-block" tabindex="0" data-placement="top" title="Eliminar"><i
                    class="fas fa-trash" data-toggle="tooltip"> </i> </span>
                <span class="text"> </span>
              </a>
            </td>
            </td>
          </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Usuario</th>
            <th>Tipo Usuario</th>
            <th>Compañía</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </tfoot>
      </table>

    </div>
  </div>
</div>