{{>message}}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Modificar Usuario</h6>
    </div>
    <div class="card-body">
        <form class="user" action="/users/edit/{{user.id}}" method="POST">
            <div class="form-group row">
                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                    <label class="label label-default">Cédula:</label>
                    <input type="text" class="form-control " value="{{user.number_id}}" autofocus name="number_id"
                        placeholder="" class="form-control" required>
                </div>
                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                    <label class="label label-default">Usuario:</label>
                    <input type="text" class="form-control " value="{{user.username}}" name="username" placeholder=""
                        class="form-control" required>
                </div>

            </div>
            <div class="form-group row">
                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                    <label class="label label-default">Nombres:</label>
                    <input type="text" class="form-control " value="{{user.name}}" name="name" placeholder=""
                        class="form-control" required>
                </div>
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label class="label label-default">Apellidos:</label>
                    <input type="text" class="form-control " value="{{user.lastname}}" name="lastname" placeholder=""
                        class="form-control" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label class="label label-default">Area:</label>
                    <input type="text" class="form-control " value="{{user.area}}" name="area" placeholder=""
                        class="form-control" required>
                </div>
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label for="exampleFormControlSelect1">Compañía:</label>
                    <select class="form-control" name="compania_id">
                        <option value="{{tsede.id}}">{{tsede.name}}</option>
                        {{#each tipo_sede}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label for="exampleFormControlSelect1">Estado:</label>
                    <select class="form-control" name="estado" id="estado"  required>
                        <option value="{{user.estado}}">{{user.n_estado}}</option>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>                
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label for="exampleFormControlSelect1">Tipo usuario:</label>
                    <select class="form-control" name="tipou_id">
                        <option value="{{tusers.id}}">{{tusers.name}}</option>
                        {{#each tipo_users}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label class="exampleFormControlSelect1">Password:</label>
                    <input type="password" class="form-control " value="" name="password" placeholder="">
                </div>
            </div>          
            <hr>
            <div class="row">
                <div class="col-lg-6">
                    <button class="btn btn-warning  btn-block">
                        Guardar
                    </button>
                </div>
                <div class="col-lg-6">
                    <a href="/users" class="btn btn-secondary btn-block">
                        Cancelar
                    </a>
                </div>
            </div>
            <hr>
        </form>
    </div>
</div>