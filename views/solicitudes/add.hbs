<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                <path
                    d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z" />
            </svg>
            Registrar información prueba
        </h6>
    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">

                <form class="user" action="/solicitudes/add" method="POST">
                    <div class="form-group row">


                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Area:</label>
                            <select class="form-control" name="area" id="area">
                                <option value="">- Elegir Opcion</option>
                                {{#each tipo_area}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                            <br>
                        </div>


                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Nombre de quien propone:</label>
                            <input type="text" class="form-control " name="propuesta" id="propuesta" placeholder=""
                                required>
                            <br>
                        </div>


                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Prueba Sugerida:</label>
                            <input type="text" class="form-control " name="prueba" id="prueba" placeholder="" required>
                            <br>
                        </div>


                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Producto:</label>
                            <select class="form-control" name="producto" id="producto">
                                <option value="">- Elegir Opcion</option>
                                {{#each producto}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                            <br>
                        </div>

                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label for="exampleFormControlSelect1">Sociedad:</label>
                            <select class="form-control" name="id_sociedad" id="id_sociedad">
                                <option value="">- Elegir Opcion</option>

                                {{#each compania}}
                                <option value={{id}}>{{name}}</option>
                                {{/each}}

                            </select>
                            <br>
                        </div>

                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label for="exampleFormControlSelect1">Prioridad:</label>
                            <select class="form-control" id="prioridad" name="prioridad">
                                <option value="">- Elegir Opcion</option>

                                <option value="Alta">Alta</option>
                                <option value="Media">Media</option>
                                <option value="Baja">Baja</option>
                            </select>
                            <br>
                        </div>

                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Contexto:</label>
                            <br>
                            <textarea class="form-control" name="contexto" id="contexto" placeholder="" wrap="soft"
                                required></textarea>
                        </div>
                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Ha sido revisando por alguna otra área? (Auditoria
                                Interna, Monitoreo). Que información tienes?:</label>
                            <br>
                            <textarea class="form-control" name="auditoria" id="auditoria"  placeholder="" wrap="soft" required></textarea>
                        </div>

                    </div>


