 {{>message}}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-speedometer2" viewBox="0 0 16 16">
                <path
                    d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4zM3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.389.389 0 0 0-.029-.518z" />
                <path fill-rule="evenodd"
                    d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A7.988 7.988 0 0 1 0 10zm8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3z" />
            </svg>
            Pruebas solicitadas
        </h6>
    </div>
    <div class="pt-3 pl-3">
        <a href="/solicitudes/add" class="btn btn-success .btn-circle btn-sm mr-auto">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Adicionar</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div></div>
            <table border="1" class="table table-striped table-sm table-hover table-bordered" id="myTablePruebas" width="100%"
                cellspacing="0">
                <thead>
                    <tr align="center">
                        <th align="center" bgcolor="#21618C" style="width: 20% color:#FBFCFC">Prueba sugerida</th>
                        <th align="center" bgcolor="#21618C" style="width: 15% color:#FBFCFC">Producto</th>
                        <th align="center" bgcolor="#21618C" style="width: 10% color:#FBFCFC">Proponente</th>
                        <th align="center" bgcolor="#21618C" style="width: 10% color:#FBFCFC">Entidad</th>
                        <th align="center" bgcolor="#21618C" style="width: 20% color:#FBFCFC">Contexto</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Prioridad</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Estado</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Fecha Estado</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">¿Se ha revisado?</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pruebasrad}}
                    <tr>
                        <td align="left">{{prueba_sugerida}}</td>
                        <td align="left">{{producto}}</td>
                        <td align="left">{{proponente}}</td>                        
                        <td align="left">{{name}}</td>
                        <td align="left">{{contexto}}</td>
                        <td align="center">
                            <div class="progress">
                                <div class="{{clasePrioridad}}" role="progressbar" style="{{porcPrioridad}}"
                                    aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">{{prioridad}}</div>
                            </div>
                        </td>
                        <td align="center">
                            <div class="progress">
                                <div class="{{clase}}" role="progressbar" style="width: 100%" aria-valuenow="100"
                                    aria-valuemin="0" aria-valuemax="100">{{estado}}</div>
                            </div>
                        </td>
                        <td align="center">{{fecha_fin}}</td>
                        <td align="center">{{revisado}}</td>
                        <td align="center">
                            {{!-- <a href="/gestionar/soportes/{{id}}" type="button"
                                class="btn btn-success">
                                <span title="Ver soportes" class="fas fa-eye"></span>
                            </a> --}}
                            <a href="/solicitudes/check/{{id}}" type="button"
                                class="btn btn-success .btn-circle">
                                <span title="Aprobar y/o rechazar prueba" class="fas fa-check"></span>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr align="center">
                        <th align="center" bgcolor="#21618C" style="width: 20% color:#FBFCFC">Prueba sugerida</th>
                        <th align="center" bgcolor="#21618C" style="width: 15% color:#FBFCFC">Producto</th>
                        <th align="center" bgcolor="#21618C" style="width: 10% color:#FBFCFC">Proponente</th>
                        <th align="center" bgcolor="#21618C" style="width: 10% color:#FBFCFC">Entidad</th>
                        <th align="center" bgcolor="#21618C" style="width: 20% color:#FBFCFC">Contexto</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Prioridad</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Estado</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Fecha Estado</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">¿Se ha revisado?</th>
                        <th align="center" bgcolor="#21618C" style="width: 5% color:#FBFCFC">Acciones</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>