<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Soportes</h6>

    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">

                <form class="pruebas" action="/gestionar/soportes/{{pruebasrad.id}}"
                    method="POST">

                    <div class="form-group row">
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Prueba sugerida</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.prueba_sugerida}}"
                                disabled>
                            <br>
                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Producto</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.producto}}"
                                disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Entidad</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.name}}" disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Contexto</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.contexto}}"
                                disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Prioridad</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.prioridad}}"
                                disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Estado</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.estado}}" disabled>
                            <br>

                        </div>

                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">¿Ha sido revisado por alguna otra área?</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.revisado}}" disabled>
                            <br>

                        </div>
                        
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">¿Qué información se tiene?</label>
                            <input type="text" class="form-control" name="names" value="{{pruebasrad.informacion_revisado}}" disabled>
                            <br>

                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <h6 class="m-0 font-weight-bold text-primary">Cargar Documentos</h6>
                            <br>

                            <div class="row">

                                <div class="input-group  col-lg-12">

                                    <div class="custom-file">
                                        <input type="file" id="file" name="upload" class="form-control" required>
                                    </div>
                                    <div class="input-group-prepend">
                                        <button type="submit" class="btn btn-warning btn-block">Cargar</button>
                                    </div>

                                </div>
                            </div>


                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm table-hover table-bordered" id="sinbotones"
                                width="100%" cellspacing="0">
                                <col width="40">
                                <col width="40">
                                <col width="40">
                                <col width="40">
                                <thead>
                                    <tr align="center">
                                        <th>Tipo</th>
                                        <th>Documento</th>
                                        <th>Tamaño</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each archivos}}
                                    <tr>
                                        <td align="left"><i class="{{icono}}"> {{tipo}}</i></td>
                                        <td><a href={{location}}>{{newnombre}}</a></td>
                                        <td align="right">{{size}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                                <tfoot>
                                    <tr align="center">
                                        <th>Tipo</th>
                                        <th>Documento</th>
                                        <th>Tamaño</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                            <a href="/appinversiones/home" class="btn btn-secondary btn-block">
                                Salir
                            </a>
                        </div>

                        <hr>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const file = document.querySelector('#file');
    const imgPreview = document.querySelector('#imgPreview');

    file.addEventListener('change', e => {
        const selectedFile = e.target.files[0];
        const reader = new FileReader();
        reader.onloadend = () => {
            imgPreview.src = reader.result;
        };
        reader.readAsDataURL(selectedFile);
    })
</script>