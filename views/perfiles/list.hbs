<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Administrar Perfiles</h6>
    </div>
    <div class="pt-3 pl-3">
        <a href="perfiles/add" class="btn btn-success .btn-circle btn-sm mr-auto">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Adicionar</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Sede</th>
                        <th>Perfil</th>
                        <th>Módulo</th>
                        <th>Funcionalidad</th>
                        <th>Recurso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listar}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{perfil}}</td>
                        <td>{{module}}</td>
                        <td>{{option_name}}</td>
                        <td>{{description}}</td>
                        <td style="text-align: center;">
                            <a href="javascript:EliminarRecurso({{idru}})" class="btn btn-danger .btn-circle btn-sm">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text"></span>
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
                <tfoot>
                    <tr>
                        <th>Sede</th>
                        <th>Perfil</th>
                        <th>Módulo</th>
                        <th>funcionalidad</th>
                        <th>Recurso</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>