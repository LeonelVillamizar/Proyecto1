<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Editar perfil</h6>
    </div>
    <div class="pt-3 pl-3">

    </div>
    <div class="card-body">
        <!-- -->
        <div class="row">
            <div class="col-lg-12">
                <form class="user" action="/perfiles/editnew/{{perfilname.id}}" method="POST">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Nombre:</label>
                            <input type="text" class="form-control" name="name"
                                value="{{perfilname.name}}" required>
                        </div>
                    </div>

                    <hr>
                    <div class="row">
                        <div class="col-lg-6">
                            <button class="btn btn-warning btn-block">
                                Guardar
                            </button>
                        </div>
                        <div class="col-lg-6">
                            <a href="/profiles" class="btn btn-secondary btn-block">
                                Cancelar
                            </a>

                        </div>

                        <hr>

                </form>


            </div>
        </div>
        <!-- -->
    </div>
</div>