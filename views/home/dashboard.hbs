
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span></h6>
    </div>
    <div class="container-fluid">

        <div class="card-body">

            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Completada
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{completa}} de {{total}}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-folder fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">En comité
                                    </div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                                {{pendiente_comite}}</div>
                                        </div>
                                        <div class="col">
                                            <div class="progress progress-sm mr-2">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                    style="width: 80%" aria-valuenow="100" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">En
                                        Proceso</div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{proceso}}
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="progress progress-sm mr-2">
                                                <div class="progress-bar bg-warning" role="progressbar"
                                                    style="width: 50%" aria-valuenow="100" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Earnings (Monthly) Card Example -->

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Pendientes
                                    </div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{pendiente}}
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="progress progress-sm mr-2">
                                                <div class="progress-bar bg-danger" role="progressbar"
                                                    style="width: 10%" aria-valuenow="50" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-comments fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <hr>
            <!-- Data Table-->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-hover table-bordered" id="example" width="100%"
                        cellspacing="0">
                        <thead>
                            <tr align="center">
                                <th style="width:15px" align="center">Id</th>
                                <th style="width:280px">Inversionista</th>
                                <th style="width:100px">Participada</th>
                                <th style="display:none;" >Instrumento</th>
                                <th style="display:none;">Nombre</th>
                                <th style="width:100px">Adquisición</th>
                                <th style="width:100px">Clasificacion</th>
                                <th style="width:100px">Puntaje</th>
                                <th style="width:100px">Estado</th>
                                <th style="width:150px">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each negocio}}
                            <tr>
                                <td align="center">{{id}}</td>
                                <td>{{inversionista}}</td>
                                <td>{{participada}}</td>
                                <td style="display:none;">{{instrumento}}</td>
                                <td style="display:none;">{{nombre}}</td>
                                <td align="center">{{date}}</td>
                                <td align="center">{{clasificacion}}</td>
                                <td align="center">{{resultado}}</td>
                                <td align="center">{{estado}}</td>
                                <td align="left">
                                    <a class="btn btn-primary btn-sm" href="/appinversiones/evaluacion/check/{{id}}">
                                        <span class="icon text-black-80"><i class="fas fa-eye"></i></span>
                                        <span class="text" class="d-inline-block" tabindex="0" data-placement="top"
                                            title="Check">
                                        </span>
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="/appinversiones/documentos/list/{{id}}">
                                        <span class="icon text-black-80"><i class="fas fa-folder"></i></span>
                                        <span class="text" class="d-inline-block" tabindex="0" data-placement="top"
                                            title="Documentos">
                                        </span>
                                    </a>                                    
                                    {{#if procesos}}
                                    <button class="btn btn-primary btn-sm mr-auto" onclick="asignar_comite({{id}})">
                                        <span class="icon text-black-80"><i class="fas fa-users"></i></span>
                                        <span class="text" class="d-inline-block" tabindex="0" data-placement="top"
                                            title="asignar"></span>
                                    </button>
                                    
                                    {{else}}
                                    
                                    {{/if}}
                                    {{#if comite}}
                                    <a class="btn btn-primary btn-sm" href="/appinversiones/evaluacion/comite/{{id}}">
                                        <span class="icon text-black-80"><i class="fas fa-users"></i></span>
                                        <span class="text" class="d-inline-block" tabindex="0" data-placement="top"
                                            title="comite">
                                        </span>
                                    </a>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr align="center">
                                <th>Id</th>
                                <th>Inversionista</th>
                                <th>Participada</th>
                                <th style="display:none;">Instrumento</th>
                                <th style="display:none;">Nombre</th>
                                <th>Adquisición</th>
                                <th>Clasificacion</th>
                                <th>Puntaje</th>
                                <th>Estado</th>
                                <th>Acciones</th>

                            </tr>
                        </tfoot>

                    </table>
                    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Asignar Comité</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form id="form1" name="form1" class="user" action="" method="POST">
                                        <div class="card-body">
                                            <div class="form-group row">
                                                <div id="evaluacion_modal" class="col-sm-12 mb-6 mb-sm-0">
                                                </div>
                                                {{#each usuarios}}
                                                <div class="form-check">
                                                    <input type="checkbox" name="usuario_id" value="{{id}}">
                                                    {{username}} -
                                                    {{name}}
                                                    {{lastname}}<br>
                                                </div>
                                                {{/each}}
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-warning"> Guardar </button>
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Salir</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>

        </div>
    </div>
</div>