<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Compañías</h6>
    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">

                <form class="user" action="/compania/add" method="POST">
                    <div class="form-group row">
                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Compañía:</label>
                            <input type="text" class="form-control " name="name" placeholder="" required>
                        </div>
                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <label class="label label-default">Responsable:</label>
                            <input type="text" class="form-control " name="responsable" placeholder="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label for="exampleFormControlSelect1">Activa:</label>
                            <select class="form-control" name="active">
                                <option value="1">SI</option>
                                <option value="2">NO</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <button class="btn btn-warning btn-block">
                                Guardar
                            </button>
                        </div>
                        <div class="col-lg-6">
                            
                            <a href="/compania" class="btn btn-secondary btn-block">
                                Cancelar
                            </a>
                        </div>
                        <hr>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function negocios(id_list) {
        var mensaje = confirm("¿Desea eliminar el usuario seleccionado?" + id_list.value);
        if (mensaje) {

            window.location = "/filtrocobro/:" + id_list.value;

        }
        else {
            return;
        }
    }
</script>