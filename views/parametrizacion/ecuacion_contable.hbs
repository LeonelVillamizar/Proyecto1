<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Ecuación contable</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Parametrización</a></li>
                    <li class="breadcrumb-item active">Ecuación contable</li>
                </ol>
            </div>

        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ecuación contable</h4>

                <br>
                <p class="card-title-desc">El siguiente módulo permite consultar la validacion de la ecuación contable del Balance
                </p>

                <!-- Tab panes -->
                <div class="tab-content p-3 text-muted">
                    <p class="mb-0">
                        <br>
                    <div class="form-group row">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-xs-4 col-md-4">
                                                <label>Fecha de actualización</label>
                                                <div class="input-group" id="datepicker1">
                                                    <input type="text" id="fecha_actualizacion"
                                                        name="fecha_actualizacion" class="form-control"
                                                        value="{{info_puc.fecha_actualizacion}}" disabled />
                                                </div>
                                            </div>

                                            <div class="col-xs-4 col-md-4">
                                                <label for="campo">Usuario</label>
                                                <input type="text" id="fecha_actualizacion" name="fecha_actualizacion"
                                                    class="form-control" value="{{info_puc.usuario}}" disabled />
                                                <br>
                                            </div>

                                            <div class="col-xs-4 col-md-4">
                                                <label for="message">Período</label>
                                                <input type="text" id="fecha_actualizacion" name="fecha_actualizacion"
                                                    class="form-control" value="{{info_puc.periodo}}" disabled />
                                            </div>
                                            <div class="col-xs-4 col-md-4">
                                                <label for="message">Balance</label>
                                                <input type="text" id="fecha_actualizacion" name="fecha_actualizacion"
                                                    class="form-control" value="{{info_puc.puc_libromayor}}" disabled />
                                            </div>

                                             <div class="col-xs-4 col-md-4">
                                                  <input type="hidden" id="id_archivo" name="id_archivo"
                                                    class="form-control" value="{{info_puc.id_archivo}}"/>
                                            </div>
                                        </div>


                                        <div class="row">
                                        </div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-3 col-md-offset-2"></div>
                                                <div class="col-md-3 col-md-offset-2"></div>
                                                <div class="col-md-3 col-md-offset-2"></div>
                                                <div class="col-md-3 col-md-offset-2">
                                                    <a href="/parametrizacion/cargarpuc"
                                                        class="btn btn-success btn-lg waves-effect waves-light ml-auto">
                                                        Regresar a la lista
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="card-body">
                                <div class="row">
                                    <div class="table-responsive">
                                        <table id="datatable-buttons"
                                            class="table table-bordered dt-responsive nowrap w-100">
                                            <thead>
                                                <tr align="center">
                                                    <th>Activo</th>
                                                    <th>Pasivo</th>
                                                    <th>Patrimonio</th>
                                                    <th>Ingresos</th>
                                                    <th>Gastos</th>
                                                    <th>Ecuacion contable</th>
                                                    <th>Costos venta</th>
                                                    <th>Costos produccion</th>
                                                    <th>Cuentas orden 8</th>
                                                    <th>Cuentas orden 9</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each ecuacion_contable}}
                                                <tr>
                                                    <td align="center"> {{activo}}</td>
                                                    <td align="left">{{pasivo}}</td>
                                                    <td align="center">{{patrimonio}}</td>
                                                    <td align="center">{{ingresos}}</td>
                                                    <td align="center">{{gastos}}</td>
                                                    <td align="center">{{ecuacion_contable}}</td>
                                                    <td align="center">{{costos_venta_6}}</td>
                                                    <td align="center">{{costos_produccion_7}}</td>
                                                    <td align="center">{{cuentas_orden_8}}</td>
                                                    <td align="center">{{cuentas_orden_9}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                            <tfoot>
                                                <tr align="center">
                                                    <th>Activo</th>
                                                    <th>Pasivo</th>
                                                    <th>Patrimonio</th>
                                                    <th>Ingresos</th>
                                                    <th>Gastos</th>
                                                    <th>Ecuacion contable</th>
                                                    <th>Costos venta</th>
                                                    <th>Costos produccion</th>
                                                    <th>Cuentas orden 8</th>
                                                    <th>Cuentas orden 9</th>
                                                </tr>
                                            </tfoot>

                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </p>
            </div>
        </div>
    </div>
</div>
</div>
</div>