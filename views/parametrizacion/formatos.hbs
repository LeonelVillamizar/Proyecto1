<!-- start page title -->
{{>message}}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Formatos</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Parametrización</a></li>
                    <li class="breadcrumb-item active">Formatos</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <hr color="blue" size=3>
                    <br>
                    <h4 class="mb-sm-0 font-size-18">Crear Formato</h4>
                    <br>
                    <p class="card-title-desc">Agregar la información general asociada al formato.
                    </p>
                    <form class="user" id="Form1" name="Form1" action="/parametrizacion/formatos" autocomplete="off"
                        method="POST">

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-firstname-input">Nombre</label>
                                    <input type="text" maxlength="200" class="form-control" id="nombre" name="nombre"
                                        required>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-phoneno-input">Periodicidad</label>
                                    <select class="form-control" name="periodicidad" id="periodicidad" required>
                                        <option selected>Seleccione...</option>
                                        <option value="Mensual">Mensual</option>
                                        <option value="Trimestral">Trimestral</option>
                                        <option value="Semestral">Semestral</option>
                                        <option value="Anual">Anual</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-phoneno-input"> Posee cruce con balance</label>
                                    <select class="form-control" name="cruce_balance" id="cruce_balance" required>
                                        <option selected>Seleccione...</option>
                                        <option value="Si">Si</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Posee cruce con formato</label>
                                    <select class="form-control" name="cruce_formato" id="cruce_formato" required>
                                        <option selected>Seleccione...</option>
                                        <option value="Si">Si</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Vicepresidencia</label>
                                    <select onchange="consultar_areas(this.value)" class="form-control"
                                        name="vicepresidencias" id="vicepresidencias" required>
                                        <option selected>Seleccione...</option>
                                        {{#each vicepresidencias}}
                                        <option value="{{id}}">{{vicepresidencia}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Área</label>
                                    <select class="form-control" name="area" id="area" required>
                                        <option value="">Seleccione...</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Identificador (Nombre de la tabla en la
                                        BD)</label>
                                    <input type="text" maxlength="15" class="form-control" id="identificador"
                                        name="identificador" required />
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-address-input">Descripción</label>
                                    <textarea id="basicpill-address-input" maxlength="5000" class="form-control"
                                        name="descripcion" rows="2"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Nombre de la hoja donde se encuentran los datos
                                        para leer</label>
                                    <input type="text" class="form-control" id="nombre_hoja" name="nombre_hoja"
                                        required />
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input">Rango de datos (Ejm: C9:Z). No incluir encabezados</label>
                                    <input type="text" class="form-control" id="rango" name="rango" required />
                                </div>
                            </div>
                        </div>

                        <div class="container">
                            <div class="row">
                                <div class="col-md-3 col-md-offset-2"></div>
                                <div class="col-md-3 col-md-offset-2"></div>
                                <div class="col-md-3 col-md-offset-2">
                                    <button class="btn btn-primary btn-lg waves-effect waves-light ml-auto">Enviar
                                        formulario</button>

                                </div>
                                <div class="col-md-3 col-md-offset-2">
                                    <a href="/parametrizacion/list"
                                        class="btn btn-success btn-lg waves-effect waves-light ml-auto">
                                        Regresar a la lista
                                    </a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end card body -->
    </div>
    <!-- end card -->
</div>
<!-- end col -->


<script>
    function consultar_areas(id) {
        $.ajax({
            url: '/parametrizacion/pregunta/consultar/areas',
            method: 'POST',
            data: {
                'array': JSON.stringify(id)
            },
            success: function (consulta) {
                console.log(consulta);
                let v_area = $("#area");
                v_area.find('option').remove();
                $("#area").append(`<option value="">Seleccione...</option>`)
                consulta.consulta.forEach(consultapgta1 => {
                    $("#area").append(`<option value="${consultapgta1.id_area}">${consultapgta1.nombre}</option>`)
                })
            }
        })
    }
</script>