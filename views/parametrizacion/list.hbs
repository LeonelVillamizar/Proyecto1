<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Formatos</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Parametrización</a></li>
                    <li class="breadcrumb-item active">Formatos</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-sm-0 font-size-18">Formatos</h4>
                <br>
                <p class="card-title-desc">Esta opción permite la visualización, gestión y creación de formatos.
                </p>
                <div class="">
                    <a href="/parametrizacion/formatos" class="btn btn-success .btn-circle btn-sm mr-auto">
                        <span class="icon text-white-50">
                            <i class="mdi mdi-check-all"></i>
                        </span>
                        <span class="text">Nuevo</span>
                    </a>
                </div>
                <br>
                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                        <thead>
                            <tr align="center">
                                <th>Formato</th>
                                <th>Periodicidad</th>
                                <th>Cruce balance</th>
                                <th>Cruce formato</th>
                                <th>Estado</th>
                                <th>Descripción</th>
                                <th>Estado proceso</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each formatos}}
                            <tr>
                                <td align="left"> {{nombre}}</td>
                                <td align="center">{{periodicidad}}</td>
                                <td align="center">{{cruce_balance}}</td>
                                <td align="center">{{cruce_formato}}</td>
                                <td align="center">{{estado}}</td>
                                <td align="center">{{descripcion}}</td>
                                <td align="center">{{estado_proceso}}</td>
                                <td align="center">
                                    <a class="btn btn-primary btn-sm" href="/parametrizacion/detalle/{{id}}">
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Ver detalle"><i class="fas fa-eye"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/parametrizacion/edit/{{id}}">
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Editar"><i class="fas fa-pencil-alt"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>
                                    <a class="btn btn-warning btn-sm" href="/parametrizacion/campos/{{id}}">
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Parametrizar campos"><i class="fas fa-list-alt"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>
                                    <a class="btn btn-success btn-sm" href="/parametrizacion/asignarusuarios/{{id}}">
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Asignar usuarios"><i class="fas fa-user-plus"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/parametrizacion/formatos/delete/{{id}}"
                                        onclick="return preguntarEliminar()">
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Eliminar"><i class="fas fa-trash"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr align="center">
                                <th>Formato</th>
                                <th>Periodicidad</th>
                                <th>Cruce balance</th>
                                <th>Cruce formato</th>
                                <th>Estado</th>
                                <th>Descripción</th>
                                <th>Estado proceso</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function preguntarEliminar() {
        var respuesta = confirm('¿Está seguro que desea eliminar el formato?. Recuerde que esto borrará los datos, campos y validaciones.');
        if (respuesta == true) {
            return true;
        }
        else {
            return false;
        }
    };
</script>