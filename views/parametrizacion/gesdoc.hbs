
<div class="card shadow mb-4">
                        <!-- {{>message}}-->
                        <div class="card-body">
                            <form class="user" action="/pruebas/add/{{idadd}}" method="POST">
                                <div class="row">
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect1">Revisión programa de trabajo:</label>
                                            <select class="form-control" name="revision_programa" value="{{pruebasInfAdd.revision_programa}}"
                                                id="exampleFormControlSelect2">
                                                <option selected="{{pruebasInfAdd.revision_programa}}">{{pruebasInfAdd.revision_programa}}</option>
                                                <option>Si</option>
                                                <option>No</option>
                                            </select>
                                        </div>

                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect3">Descripción
                                                Revision Programa de Trabajo:</label>
                                            <textarea name="detalle_revision_programa" rows="3"
                                                class="form-control">{{pruebasInfAdd.detalle_revision_programa}} </textarea>
                                            <br>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect4">Requiere
                                                prueba adicional?:</label>
                                            <select class="form-control" name="prueba_adicional">
                                                <option selected="{{pruebasInfAdd.prueba_adicional}}">{{pruebasInfAdd.prueba_adicional}}</option>
                                                <option>Si</option>
                                                <option>No</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect6">Descripción
                                                prueba adicional:</label>
                                            <textarea name="detalle_prueba_adicional" rows="3"
                                                class="form-control">{{pruebasInfAdd.detalle_prueba_adicional}}  </textarea>
                                            <br>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect7">Est·
                                                prueba requiere control?:</label>
                                            <select class="form-control" name="control" id="exampleFormControlSelect8">
                                                <option selected="{{pruebasInfAdd.control}}">{{pruebasInfAdd.control}}</option>
                                                <option>SOX</option>
                                                <option>Monitoreo</option>
                                                <option>Auditoria</option>
                                                <option>No aplica</option>
                                            </select>
                                        </div>

                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect9">Descripción
                                                requiere control:</label>
                                            <textarea name="detalle_control" rows="3" class="form-control">{{pruebasInfAdd.detalle_control}}</textarea>
                                            <br>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect10">Dio
                                                lugar a ajuste?:</label>
                                            <select class="form-control" name="ajustes" id="exampleFormControlSelect11">
                                                <option selected="{{pruebasInfAdd.ajustes}}">{{pruebasInfAdd.ajustes}}</option>
                                                <option>Si</option>
                                                <option>No</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <label for="exampleFormControlSelect12">Descripción
                                                lugar a ajuste:</label>
                                            <textarea name="detalle_ajustes" rows="3" class="form-control">{{pruebasInfAdd.detalle_ajustes}}</textarea>
                                            <br>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">
                                            <button class="btn btn-warning btn-block">
                                                Guardar
                                            </button>
                                        </div>
                                        <div class="col-sm-6 mb-2 mb-sm-0">

                                            <a href="/pruebas" class="btn btn-secondary btn-block">
                                                Cancelar
                                            </a>
                                        </div>
                                        <hr>
                                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                            <input type="hidden" name="id_prueba" class="form-control" value="{{idadd}}"/>
                                        </div>


                                    </div>
                            </form>
                        </div>
                    </div>