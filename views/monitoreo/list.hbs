<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Monitoreo</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tablero de control</a></li>
                    <li class="breadcrumb-item active">Monitoreo</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-sm-0 font-size-18">Tablero de control</h4>
                <br>
                
                <p class="card-title-desc">Esta opción permite realizar la visualización y gestión de los formatos asignados.
                </p>
                <div class="table-responsive">
                    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                        <thead>
                            <tr align="center">
                                <th>Nombre</th>
                                <th>Preparador</th>
                                <th>Aprobador área</th>
                                <th>Validador</th>
                                <th>Aprobador recibe</th>
                                <th>Fecha vencimiento</th>
                                {{#if vista_Admin_area}}
                                <th>Fecha casa matriz</th>
                                {{/if}}
                                <th>estado</th>
                                <th>estado proceso</th>
                                <th>Complejidad</th>
                                <th>Acciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each buzon}}
                            <tr>
                                <td align="left"> {{nombre}}</td>
                                <td align="center">{{preparador_env}}</td>
                                <td align="center">{{aprobador_env}}</td>
                                <td align="center">{{validador_rev}}</td>
                                <td align="center">{{aprobador_rev}}</td>
                               

                                <td align="center" style="width:90px">

                                    <div class="{{semaforo}}" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                                        id="fecha_vencimiento">{{fecha_vencimiento}}</div>

                                </td>


                                {{#if ocultar}}
                                <td align="center">{{fecha_casa_matriz}}</td>
                                {{/if}}
                                <td align="center">{{estado}}</td>
                                <td align="center">{{estado_proceso}}</td>
                                <td align="center">{{complejidad}}</td>
                                <td align="center">

                                    <a class="btn btn-success btn-sm" href="/monitoreo/aceptar_admin/{{pre_for}}" {{btn_aprobador}}>
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="validador"><i class="bx bx-search-alt-2"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>


                                    <a class="btn btn-warning btn-sm" href="/monitoreo/aceptar/{{pre_for}}" {{btn_area}}>
                                        <span class="icon text-white-50 d-inline-block" tabindex="0"
                                            data-placement="top" title="Gestionar"><i class="bx bx-search-alt-2"
                                                data-toggle="tooltip"> </i> </span>
                                        <span class="text"> </span>
                                    </a>


                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr align="center">
                                <th>Nombre</th>
                                <th>Preparador</th>
                                <th>Aprobador área</th>
                                <th>Validador</th>
                                <th>Aprobador recibe</th>
                                <th>Fecha vencimiento</th>
                                {{#if vista_Admin_area}}
                                <th>Fecha casa matriz</th>
                                {{/if}}
                                <th>estado</th>
                                <th>estado proceso</th>
                                <th>Complejidad</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

