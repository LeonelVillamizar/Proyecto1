<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Monitoreo</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tablero de control</a></li>
                    <li class="breadcrumb-item active">Monitoreo</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-sm-0 font-size-18">Gestionar formato</h4>
                <br>
                <p class="card-title-desc">Esta opción permite realizar la gestion de los formatos asignados.
                </p>
                
                    <form action="/monitoreo/aceptar/{{aceptar.pre_for}}" method="POST" autocomplete="off">

                        {{#if aceptar.ocultar}}    
                        <div class="row">
                            <div class="col-lg-12">
                                    <label for="basicpill-phoneno-input">Estado</label>
                                    <select class="form-control" name="aceptar" id="aceptar" required>
                                        <option selected></option>
                                        <option value="Aceptar">Aceptar</option>
                                        <option value="Rechazar">Rechazar</option>
                                    </select>
                            </div>
                        </div>
                        {{/if}}

                        <div class="row">   
                            <div class="col-lg-12">
                                    <label class="form-label">Nuevo nombre usuario preparador:</label>
                                    <select class="form-control select2" name="id_preparador_env" id="id_preparador_env" required> 
                                        <option value="{{aceptar.id_preparador_env}}" selected>{{aceptar.nombre}} </option>
                                            {{#each usuarios}}
                                                <option value="{{id}}">{{persona}}</option>
                                            {{/each}}
                                    </select>
                            </div>
                        </div>
                        
                        {{#if aceptar.ocultar}}
                        <div class="row">
                            <div class="col-lg-12">
                                    <label for="basicpill-address-input">Descripción</label>
                                    <textarea id="desc_proponer_usuario" maxlength="5000" class="form-control" name="descripcion" required rows="2"></textarea>
                            </div>
                        </div>
                        {{/if}} 

                        <div class="row">
                            <div class="col-lg-12">
                                        <textarea  hidden="hidden" id="id_formato" maxlength="200" class="form-control" name="id_formato" required rows="2">{{aceptar.pre_for}}</textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                 <textarea hidden="hidden" id="estado_proceso" maxlength="200" class="form-control" name="estado_proceso" required rows="2">{{aceptar.estado_proceso}}</textarea>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-lg-12">
                                 <textarea hidden="hidden" id="id_validador_rev" maxlength="200" class="form-control" name="id_validador_rev" required rows="2">{{aceptar.id_validador_rev}}</textarea>
                            </div>
                        </div> 
                        <div class="row">
                            <div class="col-lg-12">
                                 <textarea hidden="hidden" id="id_aprobador_rev" maxlength="200" class="form-control" name="id_aprobador_rev" required rows="2">{{aceptar.id_aprobador_rev}}</textarea>
                            </div>
                        </div>         
                            <div class="row">
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-1">
                                        <br> <br>     
                                        <button class="btn btn-primary btn-lg waves-effect waves-light ml-auto">
                                            Enviar asignación
                                        </button>
                                </div>
                                <div class="col-lg-1">
                                        <br> <br>   
                                        <a href= "/monitoreo/list" class="btn btn-success btn-lg waves-effect waves-light ml-auto">
                                            Regresar a la lista
                                        </a>
                                </div>     
 
                            </div>
                    </form>
            </div>
        </div>
    </div> 
</div>                