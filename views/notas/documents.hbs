<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Gestionar Planes</h6>

    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
               

                <form action="/filesPlanes/{{planes.idplanes}}" method="POST" enctype="multipart/form-data">

                  
                    <div class="form-group row">
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Usuario Responsable</label>
                            <input type="text" class="form-control" name="usuario_responsable" value="{{planes.usuario_responsable}}" disabled>
                            <br>
                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Vicepresidencia</label>
                            <input type="text" class="form-control" name="vicepresidencia" value="{{planes.vicepresidencia}}" disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Descripcion del Plan</label>
                            <input type="text" class="form-control" name="planes.descripcion" value="{{planes.descripcion}}" disabled>
                            <br>

                        </div>
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Estado</label>
                            <input type="text" class="form-control" name="Estado" value="{{planes.estado}}" disabled>
                            <br>

                        </div>
                        
                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <label class="label label-default">Fecha Realizacion:</label>
                            <input type="text" class="form-control" name="fecha_realizacion" value="{{planes.fecha_realizacion}}" disabled>
                            <br>

                        </div>

                        <div class="col-sm-4 mb-3 mb-sm-0">
                            <input type="hidden" class="form-control" name="idplanes" value="{{planes.idplanes}}" disabled>
                            <br>

                        </div>

                          <div class="col-sm-4 mb-3 mb-sm-0">
                            <input type="hidden" class="form-control" name="id_prueba" value="{{planes.id_prueba}}">
                            <br>

                        </div>

                    </div>
                    <br>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <h6 class="m-0 font-weight-bold text-primary">Cargar Documentos</h6>
                            <br>
                            <div class="col-lg-4">
                                   <textarea name="descripcion" rows="3" class="form-control" placeholder="Description Documento"></textarea> </textarea> 
                                 <br>
                            </div>



                            <div class="row">

                                <div class="input-group">

                                    <div class="custom-file">
                                        <input type="file" id="file" name="upload" class="form-control" required>
                                    </div>
                                    <div class="input-group-prepend">
                                        <input type="submit" name="btn_upload_multiple_images" value="enviar" />
                                        <!--<button type="submit" class="btn btn-warning btn-block">Cargar </button>-->
                                    </div>

                                </div>
                            </div>


                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm table-hover table-bordered" id="sinbotones"
                                width="100%" cellspacing="0">
                                <col width="40">
                                <col width="40">
                                <col width="40">
                                <col width="40">
                                <thead>
                                    <tr align="center">
                                        <th>Descripcion</th>
                                        <th>Documento</th>
                                        <th>Tamaño</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each archivos}}
                                    <tr>
                                        <td align="left"><i class="{{nombre}}"> {{descripcion}}</i></td>
                                        <td><a href={{location}}>{{nombre}}</a></td>
                                        <td align="right">{{size}}</td>
                                        <td align="center">
                                                <a href="/planes/delete/{{id}}" type="button"
                                                    class="btn btn-danger .btn-circle"
                                                    onclick="return preguntarEliminar()" id="btnEliminar">
                                                    <span title="Eliminar hallazgo" class="fas fa-trash-alt"></span>
                                                </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                                <tfoot>
                                    <tr align="center">
                                        <th>Descripcion</th>
                                        <th>Documento</th>
                                        <th>Tamaño</th>
                                        <th>Acciones</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                            <a href= "/pruebas" class="btn btn-secondary btn-block">
                                Salir
                            </a>
                        </div>

                        <hr>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function preguntarEliminar() {
        var respuesta=confirm('Realmente desea eliminar?');
        if (respuesta==true){
            return true;
        }
        else {
            return false;
        }
    };
</script>