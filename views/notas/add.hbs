<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                <path
                    d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z" />
            </svg>
            Crear formato
        </h6>
    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-3">
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="form-group row">
                            <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                <label class="label label-default">Formato</label>
                                <input id="example-email" name="example-email" class="form-control">
                                <br>
                            </div>
                            <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                <label class="label label-default">Periodicidad</label>
                                <select class="form-control" name="area" id="area">
                                    <option value="">- Elegir Opción</option>
                                    <option>Diaria</option>
                                    <option>Mensual</option>
                                    <option>Trimestral</option>
                                    <option>Semestral</option>
                                    <option>Anual</option>
                                </select>
                                <br>
                            </div>
                            <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                <label class="label label-default">Cruce balance</label>
                                <select class="form-control" name="area" id="area">
                                    <option value="">- Elegir Opción</option>
                                    <option>Sí</option>
                                    <option>No</option>
                                </select>
                                <br>
                            </div>
                            <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                <label class="label label-default">Cruce formato</label>
                                <select class="form-control" name="area" id="area">
                                    <option value="">- Elegir Opción</option>
                                    <option>Sí</option>
                                    <option>No</option>
                                </select>
                                <br>
                            </div>
                            <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                <label class="label label-default">Formatos cruce</label>
                                <input id="example-email" name="example-email" class="form-control">
                                <br>
                            </div>
                        </div>
                        <br>

                        <!-- Begin page -->
                        <div id="wrapper">
                            <div class="content">

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="header-title">Adicionar campos</h4>
                                                <p class="sub-header">
                                                    Configurar campos del formato a crear.
                                                </p>

                                                <div class="mb-2">
                                                    <div class="row">
                                                        <div class="col-12 text-sm-center form-inline">
                                                            <div class="form-group mr-2">
                                                                <button id="demo-btn-addrow" class="btn btn-primary"><i
                                                                        class="mdi mdi-plus-circle mr-2"></i>
                                                                    Adicionar nuevo campo</button>
                                                            </div>
                                                            <div class="form-group">
                                                                <input id="demo-input-search2" type="text"
                                                                    placeholder="Search" class="form-control"
                                                                    autocomplete="off">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <table id="demo-foo-addrow"
                                                    class="table table-centered table-striped table-bordered mb-0 toggle-circle"
                                                    data-page-size="7">
                                                    <thead>
                                                        <tr>
                                                            <th data-sort-ignore="true" class="min-width">
                                                            </th>
                                                            <th data-sort-initial="true" data-toggle="true">Campo</th>
                                                            <th>Tipo de campo</th>
                                                            <th>Tipo de validación</th>
                                                            <th data-hide="phone, tablet">Estado</th>
                                                            <th data-hide="phone, tablet">Confimar</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td class="text-center"><button
                                                                    class="demo-delete-row btn btn-danger btn-xs btn-icon"><i
                                                                        class="fa fa-times"></i></button>
                                                            </td>
                                                            <td><input id="example-email" name="example-email"
                                                                    class="form-control"></td>
                                                            <td> <select class="form-control" name="area" id="area">
                                                                    <option>Texto</option>
                                                                    <option>Entero</option>
                                                                    <option>Moneda</option>
                                                                    <option>Fecha</option>
                                                                </select></td>
                                                            <td><select class="form-control" name="area" id="area">
                                                                    <option>Validación Texto</option>
                                                                    <option>Validación Número</option>
                                                                    <option>Validación Espacios</option>
                                                                    <option>Validación Fecha</option>
                                                                </select></td>
                                                            <td><span
                                                                    class="badge label-table badge-success">Activo</span>
                                                            </td>
                                                            <td class="text-center"><button
                                                                    class="demo-delete-row btn btn-success btn-xs btn-icon"><i
                                                                        class="fe-check-circle"></i></button>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                    <tfoot>
                                                        <tr class="active">
                                                            <td colspan="6">
                                                                <div class="text-right">
                                                                    <ul
                                                                        class="pagination pagination-split justify-content-end footable-pagination m-t-10">
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div> <!-- end card -->
                                    </div> <!-- end col -->
                                </div>
                                <!-- end row -->
                            </div> <!-- container -->

                        </div> <!-- content -->
                    </div>

                    <!-- ============================================================== -->
                    <!-- End Page content -->
                    <!-- ============================================================== -->


                </div>
                <!-- END wrapper -->

                <!-- Vendor js -->
                <script src="../assets/js/vendor.min.js"></script>

                <!-- Footable js -->
                <script src="../assets/libs/footable/footable.all.min.js"></script>

                <!-- Init js -->
                <script src="../assets/js/pages/foo-tables.init.js"></script>

                <!-- App js -->
                <script src="../assets/js/app.min.js"></script>



                <div class="col-lg-6">
                    <button type="button" class="btn btn-block btn-sm btn-success waves-effect waves-light">
                        Crear formato
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>