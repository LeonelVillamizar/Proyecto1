<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span class="fe-upload-cloud fa-2x fa-lg">
                <path
                    d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4zM3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.389.389 0 0 0-.029-.518z" />
                <path fill-rule="evenodd"
                    d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A7.988 7.988 0 0 1 0 10zm8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3z" />
            </span>
            Cargar notas
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table border="1" class="table table-striped table-sm table-hover table-bordered" width="100%"
                id="myTableFormatos" cellspacing="0">
                <thead>
                    <tr align="center">
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Nota</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Periodicidad</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Fecha límite</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Responsable</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Notas aclaratorias</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Estado</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each notas}}
                    <tr>
                        <td align="left" width="200">{{nombre}}</td>
                        <td align="center">{{periodicidad}}</td>
                        <td align="center">{{fecha_limite}}</td>
                        <td align="center">{{responsable}}</td>
                        <td align="center">{{notas}}</td>
                        <td align="center"><span class="badge label-table badge-success">{{estado}}</span></td>
                        <td align="center">
                            <div class="fileupload btn btn-success waves-effect waves-light mb-3">
                                <span title="Cargar formato"><i class="fas fa-file-excel"></i></span>
                                <input type="file" class="upload">
                            </div>
                            <div class="btn btn-warning waves-effect waves-light mb-3">
                                <span title="Validar cruce"><i class="fas fa-check-square"></i></span>
                            </div>
                            <a class="btn btn-success waves-effect waves-light mb-3" href="/notas/detalle/{{id}}">
                                <span title="Ver detalle"><i class="fe-eye"></i></span>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr align="center">
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Nota</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Periodicidad</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Fecha límite</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Responsable</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Notas aclaratorias</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Estado</th>
                        <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Acciones</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <!-- {{>message}}-->

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span class="fas fa-file-excel fa-2x fa-lg">
                <path
                    d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4zM3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.389.389 0 0 0-.029-.518z" />
                <path fill-rule="evenodd"
                    d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A7.988 7.988 0 0 1 0 10zm8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3z" />
            </span>
            Log de carga
        </h6>
    </div>

    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm table-hover table-bordered" id="sinbotones"
                            width="100%" cellspacing="0">
                            <col width="40">
                            <col width="40">
                            <col width="40">
                            <col width="40">
                            <thead>
                                <tr align="center">
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Descripcion</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Documento</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Tamaño</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each archivos}}
                                <tr>
                                    <td align="left"><i class="{{nombre}}"> {{descripcion}}</i></td>
                                    <td><a href={{location}}>{{nombre}}</a></td>
                                    <td align="right">{{size}}</td>
                                    <td align="center">
                                        <a href="/pruebas/delete/{{id}}" type="button"
                                            class="btn btn-danger .btn-circle" onclick="return preguntarEliminar()"
                                            id="btnEliminar">
                                            <span title="Eliminar hallazgo" class="fas fa-trash-alt"></span>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr align="center">
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Descripcion</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Documento</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Tamaño</th>
                                    <th align="center" bgcolor="#21618C" style="color:#FBFCFC">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    function preguntarEliminar() {
        var respuesta = confirm('Realmente desea eliminar?');
        if (respuesta == true) {
            return true;
        }
        else {
            return false;
        }
    };
</script>