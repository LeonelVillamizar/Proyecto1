<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Áreas</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Administración</a></li>
                    <li class="breadcrumb-item active">Áreas</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">

        <h4 class="card-title"></h4>
        <p class="card-title-desc">Esta opción permite visualizar el listado de áreas creadas en el sistema para la compañía.
        </p>
        <div class="pt-1 pl-1">
          <a href="/areas/add" class="btn btn-primary waves-effect waves-light">
            <span class="icon text-white-50">
              <i class="bx bx-check-double font-size-16 align-middle me-2"></i>
            </span>
            <span class="text">Adicionar</span>
          </a>
        </div>
        <hr>
        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">

          <thead>
            <tr align="center">
              <th>Vicepresidencia</th>
              <th>Area</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each area}}
            <tr>
              <td>{{vice}}</td>
              <td>{{area}}</td>
              <td align="center">
                <a class="btn btn-warning btn-sm" href="/areas/edit/{{id_a}}">
                  <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                  <span class="text" class="d-inline-block" tabindex="0" data-placement="top" title="Editar">
                  </span>
                </a>
              </td>
              </td>
            </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr align="center">
              <th>Nombre</th>
              <th>Responsable</th>
              <th>Acciones</th>
            </tr>
          </tfoot>

        </table>

      </div>
    </div>
  </div>
</div>