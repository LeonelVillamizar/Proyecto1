<!-- start page title -->
{{>message}}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Nuevo</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Áreas</a></li>
                    <li class="breadcrumb-item active">Nuevo</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-12">
           <div class="card">
                <div class="card-body">

                    <h4 class="card-title"></h4>
                    <p class="card-title-desc">Ésta opción permite crear las áreas de la compañía.
                    </p>
                    <div class="pt-1 pl-1">
                        <a href="/areas" class="btn btn-info waves-effect waves-light">
                            <span class="icon text-white-50">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i>
                            </span>
                            <span class="text">Regresar</span>
                        </a>
                    </div>
                    <hr>
                    <!-- Nav tabs -->
                    <ul class="nav nav-pills nav-justified" role="tablist">
                        <li class="nav-item waves-effect waves-light">
                            <a class="nav-link active" data-bs-toggle="tab" href="#home-1" role="tab">
                                <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                <span class="d-none d-sm-block">Vicepresidencia</span>
                            </a>
                        </li>
                        <li class="nav-item waves-effect waves-light">
                            <a class="nav-link" data-bs-toggle="tab" href="#profile-1" role="tab">
                                <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                                <span class="d-none d-sm-block">Dependecia</span>
                            </a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="home-1" role="tabpanel">
                            <form  action="/areas/viceedit/{{areas.id}}" method="POST">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                    <div class="row"> 
                                                        <div class="col-xs-11 col-md-11">
                                                            <label for="message">Vicepresidencia</label>
                                                            <textarea id="nombre"  rows="1" name="nombre" class="form-control" maxlength="100">{{areas.vicepresidencia}}</textarea>
                                                        </div>
                                                        <div class="col-xs-11 col-md-11">
                                                            <textarea id="id_vice"  rows="1" name="id_vice" class="form-control" hidden>{{areas.id_vicepresidencia}}</textarea>
                                                        </div>
                                                    </div>
                                            </div>
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2">
                                                        <button
                                                            class="btn btn-primary btn-lg waves-effect waves-light ml-auto">Enviar
                                                            formulario
                                                        </button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- end row -->

                            </form>
                        </div>
                        <div class="tab-pane" id="profile-1" role="tabpanel">
                            <form action="/areas/edit/{{areas.id}}" method="POST">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                    <div class="row">  
                                                        <div class="col-xs-4 col-md-4">
                                                            <label for="vice">Vicepresidencia</label>
                                                            <select class="form-control" name="vicepresidencias"
                                                                id="vicepresidencias" required>
                                                                <option value="{{areas.id}}">{{areas.vicepresidencia}}</option>
                                                                {{#each consulta}}
                                                                <option value="{{id}}">{{vicepresidencia}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="col-xs-7 col-md-7">
                                                                <label for="message">Dependencia</label>
                                                                <textarea id="depen"  rows="1" name="depen" class="form-control" maxlength="100">{{areas.nombre}}</textarea>
                                                        </div>

                                                    </div>
                                            </div>
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2"></div>
                                                    <div class="col-md-3 col-md-offset-2">
                                                        <button
                                                            class="btn btn-primary btn-lg waves-effect waves-light ml-auto">Envíar
                                                            formulario</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                            </form>
                        </div>
                    </div>
                </div>
            </div>
       </div>
    </div>
</div>
